{% raw %}
network_config:
- type: interface
  name: nic1
  use_dhcp: true
  def_route: true

- type: interface
  name: nic2
  use_dhcp: false
  addresses:
  - ip_netmask: {{ ctlplane_ip }}/{{ ctlplane_subnet_cidr }}
  routes:
  - ip_netmask: 169.254.169.254/32
    next_hop: {{ ctlplane_ip }}
  - default: true
    next_hop: {{ ctlplane_ip }}

- type: vlan
  device: nic2
  vlan_id: {{ lookup('vars', networks_lower['InternalApi'] ~ '_vlan_id') }}
  addresses:
  - ip_netmask: {{ lookup('vars', networks_lower['InternalApi'] ~ '_ip') }}/{{ lookup('vars', networks_lower['InternalApi'] ~ '_cidr') }}

- type: vlan
  device: nic2
  vlan_id: {{ lookup('vars', networks_lower['Storage'] ~ '_vlan_id') }}
  addresses:
  - ip_netmask: {{ lookup('vars', networks_lower['Storage'] ~ '_ip') }}/{{ lookup('vars', networks_lower['Storage'] ~ '_cidr') }}

- type: ovs_bridge
  name: br-tenant
  mtu: 9000
  use_dhcp: false
  members:
  - type: linux_bond
    name: sriov_pf-bond
    mtu: 9000
    bonding_options: "mode=active-backup miimon=100"
    members:
      - type: sriov_pf
        name: nic3
        numvfs: 10
        primary: true
        promisc: true
        use_dhcp: false
        defroute: false
        link_mode: switchdev
      - type: sriov_pf
        name: nic4
        numvfs: 10
        promisc: true
        use_dhcp: false
        defroute: false
        link_mode: switchdev

- type: vlan
  device: sriov_pf-bond
  vlan_id: {{ lookup('vars', networks_lower['Tenant'] ~ '_vlan_id') }}
  addresses:
  - ip_netmask: {{ lookup('vars', networks_lower['Tenant'] ~ '_ip') }}/{{ lookup('vars', networks_lower['Tenant'] ~ '_cidr') }}

{% endraw %}
